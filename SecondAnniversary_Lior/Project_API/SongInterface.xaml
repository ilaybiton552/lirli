<UserControl x:Class="Project_API.SongInterface"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Project_API"
             mc:Ignorable="d" 
             d:DesignHeight="75" d:DesignWidth="800">
    <Grid x:Name="grid">
        <StackPanel Orientation="Vertical" Margin="10, 5, 0, 0" VerticalAlignment="Center">
            <TextBlock Text="{Binding Path=Name}" HorizontalAlignment="Left" FontSize="25" FontWeight="DemiBold"/>
            <TextBlock Text="{Binding Path=Author}" HorizontalAlignment="Left" FontSize="15"/>
        </StackPanel>
    </Grid>
</UserControl>
