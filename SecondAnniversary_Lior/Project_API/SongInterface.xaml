<UserControl x:Class="Project_API.SongInterface"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Project_API"
             mc:Ignorable="d" 
             d:DesignHeight="75" d:DesignWidth="825">
    <Grid x:Name="grid">
        <StackPanel Orientation="Vertical" Margin="5, 5, 0, 0" VerticalAlignment="Center">
            <ScrollViewer x:Name="nameScroll" HorizontalAlignment="Left" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Disabled" Width="150">
                <TextBlock x:Name="name" HorizontalAlignment="Left" FontSize="25" FontWeight="DemiBold"/>
            </ScrollViewer>
            <ScrollViewer x:Name="authorScroll" HorizontalAlignment="Left" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Disabled" Width="150">
                <TextBlock x:Name="author" HorizontalAlignment="Left" FontSize="15"/>
            </ScrollViewer>
        </StackPanel>
    </Grid>
</UserControl>
